{
  "name": "tekstnakijken",
  "version": "0.1.0",
  "description": "Minimal desktop rewrite assistant with global hotkey and OpenAI",
  "main": "dist-electron/main.js",
  "type": "module",
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "clean": "rimraf dist-renderer dist-electron release",
    "dev": "node scripts/dev.js",
    "dev:stop": "node scripts/stop-dev.js",
    "dev:renderer": "vite --strictPort --port 5173",
    "dev:electron": "esbuild main/main.ts main/preload.ts --bundle --platform=node --format=esm --target=node20 --sourcemap --outdir=dist-electron --packages=external --external:electron --watch",
    "dev:app": "node scripts/dev-app.js",
    "build": "npm run clean && npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "esbuild main/main.ts main/preload.ts --bundle --platform=node --format=esm --target=node20 --sourcemap --outdir=dist-electron --packages=external --external:electron",
    "dist": "npm run build && electron-builder",
    "typecheck": "tsc -p tsconfig.main.json --noEmit && tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "start": "npm run build && electron dist-electron/main.js",
    "start:fast": "electron dist-electron/main.js"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "@nut-tree-fork/shared": "^4.2.6",
    "electron-store": "^11.0.2",
    "keytar": "^7.9.0",
    "openai": "^6.3.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.tekstnakijken.app",
    "productName": "Tekstnakijken",
    "asar": true,
    "files": [
      "dist-electron/**/*",
      "dist-renderer/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
